.flash {
  padding: 15px;
  color: white;
  z-index: 2;
  text-align: center;
  background: rgba(38, 83, 138, 0.37);
  letter-spacing: 1.5px;
  text-transform: uppercase;
  font-size: 0.9em;

  &.alert {
    color: white;
  }

  &.notice {
    color: #FFEB3B; // yellow
  }

  &.success {
    color: rgb(0, 203, 80);
  }
}