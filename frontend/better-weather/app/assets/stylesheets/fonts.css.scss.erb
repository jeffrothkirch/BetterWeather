@font-face {
  font-family: 'Proxima';
  src: url('/assets/Proxima_Regular.ttf');
}

@font-face {
  font-family: 'Din Pro';
  src: url('/assets/DINPro-Light.ttf'), url('/assets/DINPro-Light.woff');
}

@font-face {
  font-family: 'Al Bayan';
  src: url('/assets/AlBayan.ttf');
}

body, .proxima {
  font-family: 'Proxima', Courier, Helvetica, sans-serif;
}

.typewriter {
  font-family: 'American Typewriter', 'Courier New', Courier, sans-serif;
}

.din-pro {
  font-family: 'Din Pro', 'American Typewriter', 'Courier New', Courier, sans-serif;
}

.al {
  font-family: 'Al Bayan', 'Din Pro', sans-serif;
}