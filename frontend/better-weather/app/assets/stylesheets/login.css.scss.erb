.container#login {
  background: url(<%= asset_path 'stars-lg.jpg' %>)  no-repeat center center fixed;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;

  margin: auto;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
}

.login-container {
  margin: 150px 15px 50px;
  min-height: 100vh;
}

.logo-lg {
  text-align: center;
  color: white;
}

.login-lg span.wi.sunny-cloudy {
  margin: auto;
  display: block;
  position: relative;
  left: 85px;
}

.sign-in {
  text-align: center;
  margin: auto;
  margin-top: 75px;
  img {
    width: 100%;
  }
  .icon-wrapper {
    display: inline-block;
    width: 32px;
    position: relative;
    top: 7px;
    padding-right: 5px;
  }
  a {
    margin: 0;
    display: inline-block;
    display: inline-block;
    font-size: 24px;
    text-decoration: none;
    color: #B99A5C;
    font-weight: bolder;
    letter-spacing: 1.5px;
    height: 45px;
    padding: 15px;
    background: rgba(255,255,255,0.85);
    border-radius: 5px;
  }
}

body {
  background: #182328;
}

