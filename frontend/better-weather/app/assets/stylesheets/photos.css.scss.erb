@import 'slick';
@import 'fonts';

.photos {
  font-size: 0;
  background: black;
  .thumb {
    display: inline-block;
    width: 33.3333vw;
    height: 33.3333vw;
    flex: 1;
    background-position: center center;
    background-size: cover;

    img {
      width: 100%;
    }
  }
}

.image { visibility: hidden; } /* prevent a flash of giant image before the image is wrapped by jQuery */

.image-wrap {
  /* whatever the dimensions you want the "cropped" image to be */
  height: 33.3333vw;
  width: 33.3333vw;
  overflow: hidden;
  display: inline-block;

  cursor: pointer;
}


.image-wrap img.square {
      visibility: visible;
      width: 100%;
 }

 .image-wrap img.portrait {
      visibility: visible;
      width: 100%;
      height: auto;
 }

 .image-wrap img.landscape {
      visibility: visible;
      height: 100%;
      width: auto;
 }

