.post-photo {
  margin: 0 60px;
  .source-logo {
    width: 28px;
    height: 28px;
    opacity: 0.25;
    margin: 0 5px 0 7px;
    position: absolute;
    left: 18px;

    img {
      width: 100%;
    }
  }
  .post-image-wrap {
    display: block;
    width: 100%;
    box-shadow: 0 0 5px 0 rgba(0,0,0,0.15);
    margin-bottom: 15px;
    img {
      width: 100%;
      border-radius: 3px;
    }
  }
}

// insta

span.source-logo {
    display: inline-block;
    padding-right: 10px;
    width: 28px;
    height: 28px;
    vertical-align: top;
}

.source-logo img {
    width: 100%;
}
span.source-date {
    display: inline-block;
    padding: 5px;
    margin-left: -4px;
    background: #4A90E2;
    color: white;
    font-weight: lighter;
    font-size: 0.8em;
    min-width: 200px;
    text-transform: uppercase;
    letter-spacing: 3px;
    opacity: 0.75;
}
.source-ago {
  margin-top: 10px;
  font-size: 0.9em;
  color: #B7A899;
  letter-spacing: 2.5px;
  text-align: left;
  display: block;
}

.source-meta {
  text-align: left;
  display: inline-block;
  flex: 1;
}